{
	"name": "starwars-api",
	"version": "1.0.0",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"local": "cross-env NODE_ENV=LOCAL serverless offline",
		"deploy": "npm run sls-build && cross-env NODE_ENV=PROD serverless deploy --aws-profile default --force",
		"zip": "./zip.sh",
		"clean": "rm -rf ./dist",
		"type-check": "tsc --noEmit",
		"esbuild": "node ./esbuild.mjs",
		"before-package": "npm run type-check && npm run esbuild",
		"lint": "eslint {src,test}/**",
		"lint:fix": "eslint --fix {src,test}/**",
		"format": "prettier --check {src,test}/**",
		"format:fix": "prettier --write {src,test}/**",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"test:coverage": "jest --coverage",
		"prepare": "rm -rf .husky &&  husky install",
		"prepare-win": "rmdir /s /q .husky && husky install",
		"sls-build": "sls package",
		"build": "tsc --noEmit"
	},
	"author": "D land Jhonn Arrese Valle",
	"license": "ISC",
	"description": "Un proyecto que utiliza Node.js y TypeScript, con AWS Lambda y Serverless para interactuar con la API de Star Wars. Tambi√©n aplicando principios SOLID y Clean Architecture.",
	"keywords": [
		"Nodejs",
		"TypeScript",
		"Serverless",
		"AWS Lambda"
	],
	"dependencies": {
		"aws-lambda": "1.0.7",
		"axios": "1.7.7",
		"class-validator": "0.14.1",
		"dotenv": "16.4.5",
		"inversify": "6.0.2",
		"mysql2": "3.6.5",
		"reflect-metadata": "0.2.2",
		"ts-log-debug": "5.5.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@types/aws-lambda": "8.10.145",
		"@types/node": "^18.15.11",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.38.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-n": "^15.7.0",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "9.0.11",
		"serverless": "^3.36.0",
		"serverless-esbuild": "1.52.1",
		"serverless-offline": "13.3.3",
		"jest": "^29.5.0",
		"axios-mock-adapter": "^1.21.4",
		"@types/jest": "^29.5.0",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.2",
		"tsc-watch": "^6.0.0",
		"typescript": "5.4.5"
	}
}
